<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<%= form_tag movies_path, method: :get do %>
  <div>
    <%= text_field_tag :query, params[:query], placeholder: 'Actor' %>
  </div>
  <div>
    <%= submit_tag "Search" %>
  </div>
<% end %>

<div id="movies">
  <% @movies.each do |movie| %>
    <%= render movie %>
    <p>
      <%= link_to "Show this movie", movie %>
    </p>
  <% end %>
</div>

<%= link_to "New movie", new_movie_path %>
